# Environment for local development (examples only)
NODE_ENV=development

# Logging level: trace|debug|info|warn|error|fatal
LOG_LEVEL=debug

# Bind host
HOST=127.0.0.1

# HTTP port
PORT=3000

# MongoDB connection string
MONGO_URI=mongodb://user:pass@localhost:27017/mydb

# MongoDB database name
MONGO_DB_NAME=mydb

# MongoDB connection options
MONGO_OPTIONS=directConnection=true

# OIDC issuer URL
OIDC_ISSUER=https://wso2.example.com/oauth2/token

# OIDC audience
OIDC_AUDIENCE=my-audience

# Route prefix (no leading/trailing slash in config)
VIRTUALHOST=api


# -------------------------------
# Graylog Configuration
# -------------------------------
GRAYLOG_ENABLED=true
GRAYLOG_HOSTNAME=proyect # como source
GRAYLOG_HOST=0.0.0.0 # ip real
GRAYLOG_PORT=9999 # Puero
GRAYLOG_USESSL=false

# -------------------------------
# CORS
# -------------------------------
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:4200,http://localhost:8501,http://localhost:3000
CORS_ALLOW_CREDENTIALS=false

# -------------------------------
# Helmet
# -------------------------------
HELMET_ENABLED=true
